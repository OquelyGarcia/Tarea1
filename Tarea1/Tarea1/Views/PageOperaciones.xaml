<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1.Views.PageOperaciones">
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name= "txtNum1" Placeholder="Ingrese el primer numero " Keyboard=" Text"/>
            
            <Entry x:Name= "txtNum2" Placeholder="Ingrese el segundo numero " Keyboard=" Text"/>


            <Button  x:Name= "btnSuma" Text="SUMA " Clicked=" btnSuma_Clicked"/>

            <Button  x:Name= "btnResta" Text="RESTA" Clicked=" btnResta_Clicked"/>

            <Button  x:Name= "btnDivision" Text="Division " Clicked=" btnDivision_Clicked"/>

            <Button  x:Name= "btnMultiplicacion" Text="Muntiplicacion " Clicked=" btnMultipicacion_Clicked"/>




        </StackLayout>
    </ContentPage.Content>
</ContentPage>